% Customização do MAKETITLE
%======================================

\renewcommand\@maketitle{%
\noindent
\setlength{\fboxsep}{0cm}  % Already boxed
\docencialogo

\vspace{-27mm}

\begin{center}
{\Large\bf\MakeUppercase{\@evento\unskip\strut}} \\
{\large\bf\@instituicao\unskip\strut} \\
{\large\bf\@date\unskip\strut} \\
\end{center}


\noindent
\begin{minipage}{\linewidth}
	\vspace{2mm}
	\let\footnote\thanks
	\centering
	{\Large \@title \par}
	\vskip 3mm
	{\large \@author \par}
	\vspace{5mm}
\end{minipage}

}




