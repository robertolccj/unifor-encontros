% Customização do RESUMO (abstract)
%================================================

\renewenvironment{abstract}
{
\noindent
%\hspace{-2mm}
\setlength{\fboxsep}{0mm}  % already boxed
\begin{flushleft}
\colorbox{black!90}  % cor da caixa;
	{
	\begin{minipage}{0.98\linewidth}%
	\vspace{2mm}
	\hspace{0mm}
	\large\sf\bf\color{white}  % cor da fonte;
	\abstractname
	\vspace{2mm}
	\end{minipage}
	}
\end{flushleft}
%\vspace{-3mm}
}
{ }




