% Customização do MAKETITLE
%======================================

\renewcommand\@maketitle{%
\noindent
\setlength{\fboxsep}{0cm}  % Already boxed
\colorbox{black!90}{%
	\begin{minipage}{\linewidth}%
		\color{white}
		\vspace*{1mm}  % Space before, inbox.
		\centering
		{\Large\bf\MakeUppercase{\@evento}\unskip\strut\par}
		{\large\bf\@instituicao\unskip\strut\par}
		{\large\bf\@date\unskip\strut\par}
		\vspace*{1mm}  % Space after, inbox.
	\end{minipage}%
	}

\noindent
\begin{minipage}{\linewidth}
	\vspace{2mm}
	\let\footnote\thanks
	\centering
	{\Large \@title \par}
	\vskip 3mm
	{\large \@author \par}
	\vspace{5mm}
\end{minipage}

}




